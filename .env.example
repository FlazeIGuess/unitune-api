# Spotify API (Required)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# YouTube Data API v3 (Optional but recommended)
# Get from: https://console.cloud.google.com
YOUTUBE_API_KEY=your_youtube_api_key

# TIDAL API (Optional - for better TIDAL metadata extraction)
# Get from: https://developer.tidal.com/dashboard
# Without these, the API will use public TIDAL endpoints (less reliable)
TIDAL_CLIENT_ID=your_tidal_client_id
TIDAL_CLIENT_SECRET=your_tidal_client_secret

# Server Configuration
PORT=10000
FLASK_ENV=production

# GDPR Compliance
LOG_LEVEL=ERROR
